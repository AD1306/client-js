{
    "compilerOptions": {
        "outDir": "./dist/tsc/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "ES2017",
        "strict": true,
        // "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "./dist/tsc/types",
        "importHelpers": false,
        "lib": ["ES6"],
        // "noEmitHelpers": true,
        "resolveJsonModule": true,
        // "inlineSourceMap": true
        "alwaysStrict": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ],
}